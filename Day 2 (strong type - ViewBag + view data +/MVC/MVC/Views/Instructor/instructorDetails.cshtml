@model Instructor 
@{
    ViewData["Title"] = "instructorDetails";
}

<h1>instructorDetails</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th scope="col">Address</th>
            <th scope="col">Salary</th>
            <th scope="col">CourseId</th>
            <th scope="col">DepartmentId</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <th scope="col">@Model.Id</th>
                <th scope="col">@Model.Name</th>
                <th scope="col"><img src="/Images/@Model.Image"></th>
                <th scope="col">@Model.Address</th>
                <th scope="col">@Model.Salary</th>
                <th scope="col">@Model.CourseId</th>
                <th scope="col">@Model.DepartmentId</th>
            </tr>
    </tbody>
</table>
<style>
    img {
        height: 15rem
    }
</style>